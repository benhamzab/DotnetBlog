@model List<BLOGAURA.Models.Reels.ReelViewModel>
@{
    ViewData["Title"] = "Reels";
    var campus = ViewBag.FilterCampus as string;
    var category = ViewBag.FilterCategory as string;
}

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">üé• Reels</h2>
        <a asp-controller="Reels" asp-action="Create" class="btn btn-primary">Cr√©er un Reel</a>
    </div>

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input name="campus" value="@campus" class="form-control" placeholder="Filtrer par campus (ville / universit√©)" />
        </div>
        <div class="col-md-4">
            <input name="category" value="@category" class="form-control" placeholder="Filtrer par cat√©gorie (tech, sport, culture)" />
        </div>
        <div class="col-md-4 d-grid">
            <button type="submit" class="btn btn-outline-secondary">Filtrer</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        foreach (var r in Model)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <a asp-controller="Home" asp-action="Profile" asp-route-userId="@r.UserId">
                            @if (!string.IsNullOrEmpty(r.UserPhotoUrl))
                            {
                                <img src="@Url.Content(r.UserPhotoUrl)" class="rounded-circle me-2" style="width:40px;height:40px;object-fit:cover;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width:40px;height:40px;">@r.UserName?.FirstOrDefault()</div>
                            }
                        </a>
                        <div>
                            <a asp-controller="Home" asp-action="Profile" asp-route-userId="@r.UserId" class="fw-bold text-decoration-none text-dark">@r.UserName</a>
                            <div class="small text-muted">@r.CreatedAtFormatted</div>
                        </div>
                    </div>

                    <div class="mb-2">
                        <video src="@Url.Content(r.VideoPath)" controls playsinline style="width:100%;max-height:70vh;object-fit:cover;border-radius:8px;"></video>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(r.Caption))
                    {
                        <div class="mb-2">@r.Caption</div>
                    }
                    @if (r.EventPostId.HasValue)
                    {
                        <div class="small"><a asp-controller="Posts" asp-action="Details" asp-route-id="@r.EventPostId">Voir l'√©v√©nement: @r.EventTitle</a></div>
                    }

                    <div class="d-flex align-items-center gap-3 mt-2">
                        <form asp-controller="Reels" asp-action="ToggleLike" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <button type="submit" class="btn btn-link p-0 @(r.IsLikedByCurrentUser ? "text-danger" : "")">‚ù§ @r.LikesCount</button>
                        </form>
                        <a href="#reel-@r.Id-comments" class="btn btn-link p-0">üí¨ @r.CommentsCount</a>
                    </div>

                    <div id="reel-@r.Id-comments" class="mt-3">
                        <form asp-controller="Reels" asp-action="AddComment" method="post" class="mb-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ReelId" value="@r.Id" />
                            <div class="input-group">
                                <input type="text" name="Content" class="form-control" placeholder="Votre commentaire..." />
                                <button type="submit" class="btn btn-outline-primary">Publier</button>
                            </div>
                        </form>
                        <!-- Optionally render recent comments in future -->
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-muted">Aucun reel pour le moment.</p>
    }
</div>
