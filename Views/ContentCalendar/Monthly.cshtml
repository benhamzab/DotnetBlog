@model IEnumerable<BLOGAURA.Models.Content.ContentCalendarItem>
@{
    ViewData["Title"] = "Calendrier mensuel";
    var year = (int)ViewBag.Year;
    var month = (int)ViewBag.Month;
    var first = new DateTime(year, month, 1);
    var daysInMonth = DateTime.DaysInMonth(year, month);
    var grouped = Model.GroupBy(i => i.PlannedPublishDate.Date).ToDictionary(g => g.Key, g => g.ToList());
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@first.ToString("MMMM yyyy")</h2>
        <div>
            <a asp-action="Monthly" asp-route-year="@year" asp-route-month="@(month-1)" class="btn btn-outline-secondary">◀️</a>
            <a asp-action="Monthly" asp-route-year="@year" asp-route-month="@(month+1)" class="btn btn-outline-secondary">▶️</a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
        @for (int day = 1; day <= daysInMonth; day++)
        {
            var date = new DateTime(year, month, day);
            <div class="col">
                <div class="card h-100">
                    <div class="card-header">@date.ToString("ddd dd")</div>
                    <div class="card-body">
                        @if (grouped.TryGetValue(date, out var items))
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var item in items)
                                {
                                    <li class="mb-2">
                                        @if (item.PostId.HasValue)
                                        {
                                            <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.PostId">@item.Title</a>
                                        }
                                        else
                                        {
                                            <a asp-controller="ContentCalendar" asp-action="Edit" asp-route-id="@item.Id">@item.Title</a>
                                        }
                                        <div class="text-muted" style="font-size:12px;">@item.ContentType • @item.TargetAudience • @item.Status</div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="text-muted">Aucun contenu prévu</div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
