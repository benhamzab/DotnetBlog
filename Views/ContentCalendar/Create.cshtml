@model BLOGAURA.Models.Content.ContentCalendarItem
@{
    ViewData["Title"] = "Créer un élément";
}

<div class="container mt-4" style="max-width:800px;">
    <h2 class="mb-3">Ajouter au calendrier</h2>
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ContentType" class="form-label"></label>
            <select asp-for="ContentType" class="form-select">
                <option>Event announcement</option>
                <option>Last‑minute reminder</option>
                <option>Recap with photos</option>
                <option>Top 5 tips from event</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="PlannedPublishDate" class="form-label"></label>
            <input asp-for="PlannedPublishDate" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="TargetAudience" class="form-label"></label>
            <select asp-for="TargetAudience" class="form-select">
                <option>First years</option>
                <option>CS students</option>
                <option>All engineering students</option>
                <option>Clubs & associations</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="EventId" class="form-label">Événement lié (post)</label>
            <select asp-for="EventId" class="form-select">
                <option value="">-- Aucun --</option>
                @if (ViewBag.EventPosts is IEnumerable<SelectListItem> posts)
                {
                    foreach (var p in posts)
                    {
                        <option value="@p.Value">@p.Text</option>
                    }
                }
            </select>
            <small class="form-text text-muted">Sélectionnez le post qui représente l'événement (optionnel).</small>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select">
                <option>Planned</option>
                <option>InProgress</option>
                <option>Published</option>
                <option>Canceled</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Annuler</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
