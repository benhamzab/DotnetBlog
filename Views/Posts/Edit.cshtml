@model BLOGAURA.Models.Posts.EditPostViewModel
@{
    ViewData["Title"] = "Modifier le post";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="mb-3">Modifier le post</h2>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger mb-3">@TempData["Error"]</div>
                }

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Titre</label>
                        <input asp-for="Title" class="form-control" placeholder="Titre du post" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label">Contenu</label>
                        <textarea asp-for="Content" class="form-control" rows="6" placeholder="Contenu du post"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                    {
                        <div class="mb-3">
                            <label class="form-label">Image actuelle</label>
                            <div>
                                <img src="@Url.Content(Model.ExistingImagePath)" alt="Image du post" class="img-thumbnail" style="max-width: 300px; max-height: 300px; object-fit: cover;" />
                            </div>
                            <div class="form-check mt-2">
                                <input asp-for="RemoveImage" class="form-check-input" type="checkbox" />
                                <label asp-for="RemoveImage" class="form-check-label">
                                    Supprimer l'image
                                </label>
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="NewImage" class="form-label">@(string.IsNullOrEmpty(Model.ExistingImagePath) ? "Image" : "Remplacer l'image")</label>
                        <input asp-for="NewImage" type="file" class="form-control" accept=".jpg,.jpeg,.png,.gif,.webp" />
                        <span asp-validation-for="NewImage" class="text-danger"></span>
                        <small class="form-text text-muted">Formats accept√©s : JPG, PNG, GIF, WEBP. Taille max : 20 Mo.</small>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                        <a asp-controller="Home" asp-action="Profile" class="btn btn-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
