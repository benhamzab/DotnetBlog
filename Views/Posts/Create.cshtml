@model BLOGAURA.Models.Posts.CreatePostModel
@{
    ViewData["Title"] = "Créer un post";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="mb-3">Nouveau post</h2>
                <p class="text-muted mb-4">Partagez un moment avec la communauté BlogAura.</p>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    @if (TempData["PostSuccess"] != null)
                    {
                        <div class="alert alert-success mb-3">@TempData["PostSuccess"]</div>
                    }

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Titre de votre post" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label"></label>
                        <textarea asp-for="Content" class="form-control" rows="4" placeholder="Quoi de neuf aujourd'hui ?"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageFiles" class="form-label">Images (optionnel)</label>
                        <input asp-for="ImageFiles" class="form-control" type="file" accept=".jpg,.jpeg,.png,.webp" multiple />
                        <span asp-validation-for="ImageFiles" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Publier le post</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
